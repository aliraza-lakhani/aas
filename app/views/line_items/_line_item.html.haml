- if @current_item==line_item
  %tr.line-item-highlight
    %td= button_to '+', line_items_path(product_id: line_item.product.id),remote:true    
    %td.quantity= line_item.quantity
    %td= line_item.product.title
    %td.price= number_to_currency(line_item.l_price,unit:"Rs ",precision: 2)
    %td= button_to '-', line_item_path(line_item.id),method: :patch,remote:true
    %td= button_to '×', line_item_path(line_item.id),method: :delete,remote:true
- else
  %tr
    %td= button_to '+', line_items_path(product_id: line_item.product.id),remote:true
    %td.quantity= line_item.quantity
    %td= line_item.product.title
    %td.price= number_to_currency(line_item.l_price,unit:"Rs ",precision: 2)
    %td= button_to '-', line_item_path(line_item.id),method: :patch,remote:true
    %td= button_to '×', line_item_path(line_item.id),method: :delete,remote:true